{
  "include": ["src", "types"],
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "rootDir": "./src",
    "target": "ESNext",
    "module": "esnext",
    "sourceMap": false,
    "strict": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "lib": [
      "es2018",
      "dom"
    ],
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "esm",
    "tests",
    "stories",
    "jest.config.ts",
    "jest.config.*.ts"
  ]
}


